generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id               String            @id @default(uuid())
  name             String
  country          String
  password         String?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  documentCounters DocumentCounter[]
  transactions     Transaction[]
  users            User[]

  @@map("Tenant")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String   @map("password_hash")
  role         String   // 'owner' | 'admin' | 'operator'
  tenantId     String   @map("tenant_id")
  tenant       Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  firstName    String?  @map("first_name")
  lastName     String?  @map("last_name")
  isActive     Boolean  @default(true) @map("is_active")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@index([email])
  @@index([tenantId])
  @@index([role])
  @@map("users")
}

model Transaction {
  id              String          @id @default(uuid())
  documentNumber  String          @unique @map("document_number")
  transactionType TransactionType @map("transaction_type")
  amount          Decimal         @db.Decimal(10, 2)
  description     String?
  
  // Product fields
  category        String?         @db.VarChar(100)
  productId       String?         @map("product_id") @db.VarChar(100)
  productName     String?         @map("product_name") @db.VarChar(255)
  
  // Customer fields
  customerId      String?         @map("customer_id") @db.VarChar(100)
  customerName    String?         @map("customer_name") @db.VarChar(255)
  
  tenantId        String          @map("tenant_id")
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  tenant          Tenant          @relation(fields: [tenantId], references: [id])

  @@index([tenantId])
  @@index([transactionType])
  @@index([createdAt])
  @@index([category])
  @@index([productId])
  @@index([customerId])
  @@map("transactions")
}

model DocumentCounter {
  id         String   @id @default(uuid())
  tenantId   String   @map("tenant_id")
  prefix     String
  year       Int
  lastNumber Int      @map("last_number")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  tenant     Tenant   @relation(fields: [tenantId], references: [id])

  @@unique([tenantId, prefix, year])
  @@index([tenantId])
  @@map("document_counters")
}

enum TransactionType {
  SALE
  RETURN
  REBATE
  DISCOUNT
  COST
}
